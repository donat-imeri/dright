<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollViewFragmentOptions"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/relativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/lblPostedBy"
            android:text="Posted by: "
            android:textSize="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/lblPostedBy"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:id="@+id/txtPostedBy"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:padding="20dp"
            android:background="@drawable/rounded_border_edittext"
            android:textColor="@android:color/white"
            android:layout_below="@+id/lblPostedBy"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/txtTitle"
            android:id="@+id/insideLinear"
            android:layout_marginTop="20dp"

            >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radiogroup">

            </RadioGroup>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write a comment"
            android:layout_below="@+id/insideLinear"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/txtComment"/>

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btnCmn"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/insideLinear"
            android:layout_marginTop="10dp"
            android:src="@drawable/rght_arr"
            android:background="@null"/>


    </RelativeLayout>
</ScrollView>